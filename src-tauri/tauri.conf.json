{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "SimpliciText"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "all": false,
        "center": false,
        "close": true,
        "create": false,
        "hide": false,
        "maximize": false,
        "minimize": false,
        "print": false,
        "requestUserAttention": false,
        "setAlwaysOnTop": true,
        "setClosable": false,
        "setContentProtected": false,
        "setCursorGrab": false,
        "setCursorIcon": false,
        "setCursorPosition": false,
        "setCursorVisible": false,
        "setDecorations": false,
        "setFocus": false,
        "setFullscreen": false,
        "setIcon": false,
        "setIgnoreCursorEvents": false,
        "setMaxSize": false,
        "setMaximizable": false,
        "setMinSize": false,
        "setMinimizable": false,
        "setPosition": false,
        "setResizable": false,
        "setSize": false,
        "setSkipTaskbar": false,
        "setTitle": true,
        "show": false,
        "startDragging": true,
        "unmaximize": false,
        "unminimize": false
      },
      "notification": {
        "all": true
      },
      "fs": {
        "all": false,
        "writeFile": true,
        "exists": true,
        "createDir": true,
        "removeFile": true,
        "readFile": true,
        "scope": [
          "$DOCUMENT/*",
          "$DOCUMENT/SimpliciText/*",
          "$APPDATA/*",
          "$APPDATA/achievements/*",
          "$HOME/.zshrc",
          "$HOME/.bashrc"
        ]
      },
      "os": {
        "all": true
      },
      "path": {
        "all": true
      },
      "dialog": {
        "message": true
      },
      "process": {
        "all": false,
        "exit": true,
        "relaunch": false,
        "relaunchDangerousAllowSymlinkMacos": false
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.xxX.simplicitext",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "SimpliciText",
        "width": 800,
        "height": 600,
        "titleBarStyle": "Overlay",
        "transparent": true
      }
    ],
    "macOSPrivateApi": true
  }
}
